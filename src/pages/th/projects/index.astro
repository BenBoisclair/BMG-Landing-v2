---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Header from '../../../components/layout/Header.astro';
import Footer from '../../../components/layout/Footer.astro';
import ProjectHero from '../../../components/sections/ProjectHero.astro';
import ProjectGrid from '../../../components/sections/ProjectGrid.astro';
import { useI18n } from '../../../i18n/utils';

const { lang, t } = useI18n(Astro.url);
---

<BaseLayout
  title={`${t.project.title} | ${t.meta.title}`}
  description={t.meta.description}
  lang={lang}
>
  <Header pageType="project" />

  <main>
    <ProjectHero />
    <ProjectGrid />
  </main>

  <Footer />
</BaseLayout>

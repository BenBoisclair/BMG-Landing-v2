---
import '../styles/global.css';
import { getLangFromUrl, getTextDirection, type Language } from '../i18n/utils';

interface Props {
  title?: string;
  description?: string;
  lang?: Language;
}

// Get language from URL or use prop override
const urlLang = getLangFromUrl(Astro.url);

const {
  title = 'BMG - Bangkok Modern Granite',
  description = 'Premium granite sculptures and artistic stonework crafted with precision CNC technology and expert hand finishing.',
  lang = urlLang,
} = Astro.props;

// Get text direction for the current language (RTL for Arabic)
const dir = getTextDirection(lang);
---

<!DOCTYPE html>
<html lang={lang} dir={dir}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="bg-white text-gray-900 antialiased">
    <slot />
  </body>
</html>

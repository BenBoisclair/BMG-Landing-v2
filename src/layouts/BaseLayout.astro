---
import '../styles/global.css';
import { useI18n, type Language } from '../i18n/utils';

interface Props {
  title?: string;
  description?: string;
  lang?: Language;
}

// Get i18n context from URL
const i18n = useI18n(Astro.url);

const {
  title = 'BMG - Bangkok Modern Granite',
  description = 'Premium granite sculptures and artistic stonework crafted with precision CNC technology and expert hand finishing.',
  lang = i18n.lang,
} = Astro.props;

// Use text direction from i18n context (RTL for Arabic)
const dir = i18n.dir;
---

<!DOCTYPE html>
<html lang={lang} dir={dir}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Preload above-the-fold images for better LCP -->
    <link rel="preload" as="image" href="/images/Landing/HeroSection/background_1.png" fetchpriority="high" />
    <link rel="preload" as="image" href="/images/logo.png" fetchpriority="high" />

    <!-- DNS prefetch and preconnect for external resources -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Preload Google Fonts stylesheet for Montserrat -->
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap"
    />

    <title>{title}</title>
  </head>
  <body class="bg-white text-gray-900 antialiased">
    <slot />
  </body>
</html>

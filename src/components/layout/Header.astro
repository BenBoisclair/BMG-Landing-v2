---
import { useI18n, getLocalizedPath, languages, type Language } from '../../i18n/utils';

interface Props {
  pageType?: 'landing' | 'project';
}

const { pageType = 'landing' } = Astro.props;
const { lang: currentLang, t } = useI18n(Astro.url);

// Get the base path for localized links
const getNavHref = (path: string) => {
  if (path.startsWith('#')) return path;
  return getLocalizedPath(currentLang, path);
};

const navLinks = [
  { href: '/', label: t.nav.home, isAnchor: false },
  { href: '/projects', label: t.nav.project, isAnchor: false },
  { href: '/process', label: t.nav.process, isAnchor: false },
  { href: '#delivery', label: t.nav.globalDelivery, isAnchor: true },
  { href: '#about', label: t.nav.about, isAnchor: true },
  { href: '#contact', label: t.nav.contact, isAnchor: true },
];

const currentPath = Astro.url.pathname;
const currentHash = Astro.url.hash;
const isActive = (href: string) => {
  // For anchor links, check if we're on the homepage and the hash matches
  if (href.startsWith('#')) {
    const pathWithoutLang = currentPath.replace(/^\/(en|th|ar)/, '') || '/';
    // Active if on homepage and hash matches, or on homepage and it's the #home link
    if (pathWithoutLang === '/') {
      return currentHash === href || (href === '#home' && !currentHash);
    }
    return false;
  }
  // For regular page links
  const pathWithoutLang = currentPath.replace(/^\/(en|th|ar)/, '') || '/';
  if (href === '/') return pathWithoutLang === '/';
  return pathWithoutLang.startsWith(href);
};

// Get localized paths for each language
const languageOptions = Object.entries(languages).map(([code, name]) => ({
  code: code as Language,
  name,
  href: getLocalizedPath(code as Language, currentPath),
  isCurrent: code === currentLang,
}));
---

<header id="main-header" class="fixed top-0 left-0 right-0 z-50 bg-transparent transition-colors duration-300" data-page-type={pageType}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20 lg:h-24">
      <!-- Logo -->
      <a href="/" class="shrink-0">
        <img src="/images/logo.png" alt="BMG - Bangkok Modern Granite" class="h-16 lg:h-20 w-auto" />
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center gap-12">
        {navLinks.map((link) => (
          <a
            href={link.isAnchor ? link.href : getNavHref(link.href)}
            class:list={[
              "text-xl font-medium font-inter transition-colors duration-200",
              isActive(link.href)
                ? "text-white"
                : "text-white hover:text-white/80"
            ]}
          >
            {link.label}
          </a>
        ))}
      </nav>

      <!-- Language Dropdown (Desktop) -->
      <div class="hidden lg:flex items-center relative">
        <button
          id="language-dropdown-button"
          class="flex items-center gap-2 px-6 py-3.5 text-base font-medium font-inter text-white bg-black rounded-lg shadow-sm hover:bg-gray-900 transition-colors duration-200"
          aria-expanded="false"
          aria-haspopup="true"
        >
          <span>{languages[currentLang]}</span>
          <svg class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>
        <div
          id="language-dropdown-menu"
          class="absolute top-full right-0 mt-2 w-40 bg-white rounded-lg shadow-lg overflow-hidden hidden"
        >
          {languageOptions.map((lang) => (
            <a
              href={lang.href}
              class:list={[
                "block px-4 py-3 text-sm font-medium transition-colors duration-200",
                lang.isCurrent
                  ? "bg-gray-100 text-red-600"
                  : "text-gray-700 hover:bg-gray-50"
              ]}
              aria-current={lang.isCurrent ? "page" : undefined}
            >
              {lang.name}
            </a>
          ))}
        </div>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="lg:hidden p-2 text-white hover:text-white/80"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Navigation -->
  <nav
    id="mobile-menu"
    class="lg:hidden hidden bg-black/95 backdrop-blur-sm"
  >
    <div class="px-4 py-4 space-y-2">
      {navLinks.map((link) => (
        <a
          href={link.isAnchor ? link.href : getNavHref(link.href)}
          class:list={[
            "block px-4 py-3 text-lg font-medium font-inter rounded-lg transition-colors duration-200",
            isActive(link.href)
              ? "text-white bg-white/10"
              : "text-white hover:bg-white/10"
          ]}
        >
          {link.label}
        </a>
      ))}
      <!-- Language Dropdown (Mobile) -->
      <div class="mt-4">
        <button
          id="mobile-language-dropdown-button"
          class="w-full flex items-center justify-between px-6 py-3.5 text-base font-medium font-inter text-white bg-black rounded-lg border border-white/20 hover:bg-white/10 transition-colors duration-200"
          aria-expanded="false"
          aria-haspopup="true"
        >
          <span>{languages[currentLang]}</span>
          <svg class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>
        <div
          id="mobile-language-dropdown-menu"
          class="hidden mt-2 bg-white/10 rounded-lg overflow-hidden"
        >
          {languageOptions.map((lang) => (
            <a
              href={lang.href}
              class:list={[
                "block px-6 py-3 text-base font-medium transition-colors duration-200",
                lang.isCurrent
                  ? "text-red-400 bg-white/10"
                  : "text-white hover:bg-white/5"
              ]}
              aria-current={lang.isCurrent ? "page" : undefined}
            >
              {lang.name}
            </a>
          ))}
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  // Header functionality is now handled by an external module
  // This follows Astro best practices for larger scripts
  import '../../scripts/header';
</script>

---
import { useI18n, getLocalizedPath, languages, type Language } from '../../i18n/utils';

interface Props {
  pageType?: 'landing' | 'project';
}

const { pageType = 'landing' } = Astro.props;
const { lang: currentLang, t } = useI18n(Astro.url);

// Get the base path for localized links
const getNavHref = (path: string) => {
  if (path.startsWith('#')) return path;
  return getLocalizedPath(currentLang, path);
};

// Flag mapping for each language
const flagMap: Record<Language, string> = {
  en: 'gb',
  th: 'th',
  ar: 'sa',
};

// Navigation links (excluding Products dropdown items)
const navLinks = [
  { href: '/', label: t.nav.home, isAnchor: false },
  { href: '/process', label: t.nav.process, isAnchor: false },
  // { href: '#delivery', label: t.nav.globalDelivery, isAnchor: true },
  // { href: '#about', label: t.nav.about, isAnchor: true },
  { href: '/contacts', label: t.nav.contact, isAnchor: false },
];

// Products dropdown items
const productsDropdownItems = [
  { href: '/projects', label: t.nav.projects },
  { href: '/materials', label: t.nav.materials },
];

const currentPath = Astro.url.pathname;
const currentHash = Astro.url.hash;
const isActive = (href: string) => {
  // For anchor links, check if we're on the homepage and the hash matches
  if (href.startsWith('#')) {
    const pathWithoutLang = currentPath.replace(/^\/(en|th|ar)/, '') || '/';
    // Active if on homepage and hash matches, or on homepage and it's the #home link
    if (pathWithoutLang === '/') {
      return currentHash === href || (href === '#home' && !currentHash);
    }
    return false;
  }
  // For regular page links
  const pathWithoutLang = currentPath.replace(/^\/(en|th|ar)/, '') || '/';
  if (href === '/') return pathWithoutLang === '/';
  return pathWithoutLang.startsWith(href);
};

// Check if any products dropdown item is active
const isProductsActive = productsDropdownItems.some(item => isActive(item.href));

// Get localized paths for each language
const languageOptions = Object.entries(languages).map(([code, name]) => ({
  code: code as Language,
  name,
  flag: flagMap[code as Language],
  href: getLocalizedPath(code as Language, currentPath),
  isCurrent: code === currentLang,
}));
---

<header id="main-header" class="fixed top-0 left-0 right-0 z-999 bg-transparent transition-all duration-300" data-page-type={pageType}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20 lg:h-24">
      <!-- Logo -->
      <a href="/" class="shrink-0">
        <img src="/images/logo.png" alt="BMG - Bangkok Modern Granite" class="h-12 lg:h-16 w-auto" />
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center gap-6 xl:gap-10">
        <!-- Home link -->
        <a
          href={getNavHref('/')}
          class:list={[
            "text-base xl:text-lg font-medium font-montserrat transition-colors duration-200",
            isActive('/') ? "text-white" : "text-white hover:text-white/80"
          ]}
        >
          {t.nav.home}
        </a>

        <!-- Products Dropdown -->
        <div id="products-dropdown" class="relative">
          <button
            data-dropdown-trigger
            class:list={[
              "flex items-center gap-1 text-base xl:text-lg font-medium font-montserrat transition-colors duration-200",
              isProductsActive ? "text-white" : "text-white hover:text-white/80"
            ]}
            aria-expanded="false"
            aria-haspopup="true"
          >
            <span>{t.nav.products}</span>
            <svg class="w-3.5 h-3.5 xl:w-4 xl:h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div
            id="products-dropdown-menu"
            class="products-dropdown-menu absolute top-full left-0 pt-3 hidden"
          >
            <div class="bg-white rounded-xl shadow-lg overflow-hidden min-w-[140px] xl:min-w-[160px]">
              {productsDropdownItems.map((item) => (
                <a
                  href={getNavHref(item.href)}
                  class:list={[
                    "block px-4 py-2.5 xl:px-5 xl:py-3 text-sm xl:text-base font-medium transition-colors duration-200",
                    isActive(item.href)
                      ? "bg-red-50 text-red-600"
                      : "text-gray-700 hover:bg-gray-50"
                  ]}
                >
                  {item.label}
                </a>
              ))}
            </div>
          </div>
        </div>

        <!-- Other nav links -->
        {navLinks.slice(1).map((link) => (
          <a
            href={link.isAnchor ? link.href : getNavHref(link.href)}
            class:list={[
              "text-base xl:text-lg font-medium font-montserrat transition-colors duration-200",
              isActive(link.href)
                ? "text-white"
                : "text-white hover:text-white/80"
            ]}
          >
            {link.label}
          </a>
        ))}
      </nav>

      <!-- Language Dropdown (Desktop) - Flag Only -->
      <div class="hidden lg:flex items-center relative">
        <button
          id="language-dropdown-button"
          class="flex items-center justify-center w-11 h-11 rounded-lg bg-white/10 hover:bg-white/20 transition-colors duration-200"
          aria-expanded="false"
          aria-haspopup="true"
          aria-label={t.nav.language}
        >
          <img
            src={`/images/flags/${flagMap[currentLang]}.svg`}
            alt={languages[currentLang]}
            class="w-6 h-4 rounded-sm object-cover"
          />
        </button>
        <div
          id="language-dropdown-menu"
          class="absolute top-full right-0 mt-2 bg-white rounded-lg shadow-lg overflow-hidden hidden"
        >
          {languageOptions.filter(lang => !lang.isCurrent).map((lang) => (
            <a
              href={lang.href}
              class="flex items-center justify-center p-3 hover:bg-gray-50 transition-colors duration-200"
              aria-label={`Switch to ${lang.name}`}
            >
              <img
                src={`/images/flags/${lang.flag}.svg`}
                alt={lang.name}
                class="w-6 h-4 rounded-sm object-cover"
              />
            </a>
          ))}
        </div>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="lg:hidden p-2 text-white hover:text-white/80"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Navigation -->
  <nav
    id="mobile-menu"
    class="lg:hidden hidden bg-black/95 backdrop-blur-sm"
  >
    <div class="px-4 py-4 space-y-2">
      <!-- Home link -->
      <a
        href={getNavHref('/')}
        class:list={[
          "block px-4 py-3 text-lg font-medium font-montserrat rounded-lg transition-colors duration-200",
          isActive('/') ? "text-white bg-white/10" : "text-white hover:bg-white/10"
        ]}
      >
        {t.nav.home}
      </a>

      <!-- Products Accordion (Mobile) -->
      <div class="mobile-products-accordion">
        <button
          id="mobile-products-button"
          class:list={[
            "w-full flex items-center justify-between px-4 py-3 text-lg font-medium font-montserrat rounded-lg transition-colors duration-200",
            isProductsActive ? "text-white bg-white/10" : "text-white hover:bg-white/10"
          ]}
          aria-expanded="false"
        >
          <span>{t.nav.products}</span>
          <svg class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>
        <div id="mobile-products-menu" class="hidden pl-4 mt-1 space-y-1">
          {productsDropdownItems.map((item) => (
            <a
              href={getNavHref(item.href)}
              class:list={[
                "block px-4 py-2.5 text-base font-medium font-montserrat rounded-lg transition-colors duration-200",
                isActive(item.href)
                  ? "text-red-400 bg-white/10"
                  : "text-white/80 hover:bg-white/5"
              ]}
            >
              {item.label}
            </a>
          ))}
        </div>
      </div>

      <!-- Other nav links -->
      {navLinks.slice(1).map((link) => (
        <a
          href={link.isAnchor ? link.href : getNavHref(link.href)}
          class:list={[
            "block px-4 py-3 text-lg font-medium font-montserrat rounded-lg transition-colors duration-200",
            isActive(link.href)
              ? "text-white bg-white/10"
              : "text-white hover:bg-white/10"
          ]}
        >
          {link.label}
        </a>
      ))}

      <!-- Language Selector (Mobile) - Inline Flags -->
      <div class="mt-4 pt-4 border-t border-white/10">
        <div class="flex items-center justify-center gap-4">
          {languageOptions.map((lang) => (
            <a
              href={lang.href}
              class:list={[
                "flex items-center justify-center w-12 h-10 rounded-lg transition-all duration-200",
                lang.isCurrent
                  ? "bg-white/20 ring-2 ring-white/40"
                  : "bg-white/5 hover:bg-white/10"
              ]}
              aria-label={`Switch to ${lang.name}`}
              aria-current={lang.isCurrent ? "page" : undefined}
            >
              <img
                src={`/images/flags/${lang.flag}.svg`}
                alt={lang.name}
                class="w-7 h-5 rounded-sm object-cover"
              />
            </a>
          ))}
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  // Header functionality is now handled by an external module
  // This follows Astro best practices for larger scripts
  import '../../scripts/header';
</script>

<style>
  /* Products Dropdown Animation */
  .products-dropdown-menu {
    opacity: 0;
    transform: translateY(-8px);
    transition: opacity 0.2s ease, transform 0.2s ease;
    pointer-events: none;
  }

  .products-dropdown-menu.open {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }

  /* RTL support for dropdown */
  [dir="rtl"] .products-dropdown-menu {
    left: auto;
    right: 0;
  }
</style>

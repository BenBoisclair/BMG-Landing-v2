---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/product', label: 'Product' },
  { href: '/process', label: 'Process' },
  { href: '/global-delivery', label: 'Global Delivery' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];

const currentPath = Astro.url.pathname;
const isActive = (href: string) => {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
};
---

<header id="main-header" class="fixed top-0 left-0 right-0 z-50 bg-transparent transition-colors duration-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20 lg:h-24">
      <!-- Logo -->
      <a href="/" class="shrink-0">
        <img src="/images/logo.png" alt="BMG - Bangkok Modern Granite" class="h-16 lg:h-20 w-auto" />
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center gap-12">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              "text-xl font-medium font-inter transition-colors duration-200",
              isActive(link.href)
                ? "text-red-600"
                : "text-white hover:text-white/80"
            ]}
          >
            {link.label}
          </a>
        ))}
      </nav>

      <!-- Language Button -->
      <div class="hidden lg:flex items-center">
        <button class="px-6 py-3.5 text-base font-medium font-inter text-white bg-black rounded-lg shadow-sm hover:bg-gray-900 transition-colors duration-200">
          Language
        </button>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="lg:hidden p-2 text-white hover:text-white/80"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Navigation -->
  <nav
    id="mobile-menu"
    class="lg:hidden hidden bg-black/95 backdrop-blur-sm"
  >
    <div class="px-4 py-4 space-y-2">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class:list={[
            "block px-4 py-3 text-lg font-medium font-inter rounded-lg transition-colors duration-200",
            isActive(link.href)
              ? "text-red-600 bg-white/10"
              : "text-white hover:bg-white/10"
          ]}
        >
          {link.label}
        </a>
      ))}
      <button class="w-full mt-4 px-6 py-3.5 text-base font-medium font-inter text-white bg-black rounded-lg border border-white/20 hover:bg-white/10 transition-colors duration-200">
        Language
      </button>
    </div>
  </nav>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close menu when clicking a link
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });

  // Add blue background to header when scrolling past hero section
  function handleHeaderScroll() {
    const heroSection = document.getElementById('home');
    const header = document.getElementById('main-header');

    if (heroSection && header) {
      const heroBottom = heroSection.offsetTop + heroSection.offsetHeight;
      const scrollPosition = window.scrollY;

      if (scrollPosition > heroBottom) {
        header.classList.remove('bg-transparent');
        header.classList.add('bg-[#2C266C]');
      } else {
        header.classList.remove('bg-[#2C266C]');
        header.classList.add('bg-transparent');
      }
    }
  }

  // Run on scroll
  window.addEventListener('scroll', handleHeaderScroll);

  // Run on load to set initial state
  handleHeaderScroll();
</script>

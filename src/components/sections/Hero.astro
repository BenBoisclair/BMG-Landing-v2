---
import { getLangFromUrl, getTranslations } from '../../i18n/utils';

const currentLang = getLangFromUrl(Astro.url);
const t = getTranslations(currentLang);
---

<section id="home" class="relative h-screen min-h-[600px] max-h-[800px] pt-20 lg:pt-24">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <img
      src="/images/Landing/HeroSection/background_1.png"
      alt={t.hero.backgroundAlt}
      class="w-full h-full object-cover"
    />
    <!-- Purple overlay -->
    <div class="absolute inset-0 bg-[#392DCA]/20"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 h-full flex flex-col items-center justify-end pb-16 lg:pb-24 px-4">
    <a
      href="#product"
      class="px-6 py-3 text-2xl font-medium font-inter text-white bg-[#2c266c]/87 rounded-lg shadow-sm hover:bg-[#2c266c] transition-colors duration-200"
    >
      {t.hero.viewMore}
    </a>
  </div>
</section>

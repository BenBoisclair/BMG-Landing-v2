---
import Button from '../ui/Button.astro';
import FormInput from '../ui/FormInput.astro';
import FormSelect from '../ui/FormSelect.astro';
import FormPhoneInput from '../ui/FormPhoneInput.astro';
import { getLangFromUrl, getTranslations } from '../../i18n/utils';

const currentLang = getLangFromUrl(Astro.url);
const t = getTranslations(currentLang);

const contactInfo = {
  address: [
    '9/11 Moo 10 Borommaratchachonnani rd',
    'Sala Thammasop Thawi Watthana',
    'Bangkok 10170'
  ],
  phone: ['+66 2 888 7788', '+66 87 879 6226', '+66 81 445 9999'],
  email: 'bmgthai@bmg.co.th',
  socials: [
    { name: 'Facebook', handle: 'BMG บางกอกโมเดิร์นแกรนิต', url: 'https://www.facebook.com/bmgthailand', icon: 'facebook' },
    { name: 'Line', handle: '@bmgstone', url: 'https://page.line.me/bmgstone?openQrModal=true', icon: 'line' },
    { name: 'Instagram', handle: 'bangkokmoderngranite', url: 'https://www.instagram.com/bangkokmoderngranite', icon: 'instagram' },
    { name: 'YouTube', handle: 'bmgthai granite', url: 'https://www.youtube.com/channel/UC9FCyP3XZHRkvK9vnnh8IMg', icon: 'youtube' },
  ],
};

const positions = [
  t.contact.positions.salesManager,
  t.contact.positions.projectManager,
  t.contact.positions.designer,
  t.contact.positions.architect,
  t.contact.positions.developer,
  t.contact.positions.other
];

const projectTypes = [
  t.contact.projectTypes.residential,
  t.contact.projectTypes.commercial,
  t.contact.projectTypes.industrial,
  t.contact.projectTypes.hospitality,
  t.contact.projectTypes.publicSpace,
  t.contact.projectTypes.other
];

const budgetRanges = [
  t.contact.budgetRanges.under10k,
  t.contact.budgetRanges['10kTo50k'],
  t.contact.budgetRanges['50kTo100k'],
  t.contact.budgetRanges['100kTo500k'],
  t.contact.budgetRanges.over500k
];

const considerations = [
  t.contact.considerations.quality,
  t.contact.considerations.price,
  t.contact.considerations.timeline,
  t.contact.considerations.design,
  t.contact.considerations.allOfTheAbove
];

const timelines = [
  t.contact.timelines.immediate,
  t.contact.timelines.within1Month,
  t.contact.timelines['1To3Months'],
  t.contact.timelines['3To6Months'],
  t.contact.timelines['6PlusMonths']
];
---

<section id="contact" class="py-16 lg:py-24 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-start">
      <!-- Contact Form -->
      <div class="bg-white rounded-2xl p-6 lg:p-8 shadow-[0_4px_24px_rgba(0,0,0,0.08)]">
        <form class="space-y-6" onsubmit="return false;">
          <div class="grid sm:grid-cols-2 gap-6">
            <FormInput label={t.contact.form.firstName} name="firstName" required />
            <FormInput label={t.contact.form.surname} name="surname" required />
          </div>
          <div class="grid sm:grid-cols-2 gap-6">
            <FormPhoneInput label={t.contact.form.phone} name="phone" required />
            <FormInput label={t.contact.form.email} name="email" type="email" required />
          </div>
          <div class="grid sm:grid-cols-2 gap-6">
            <FormInput label={t.contact.form.whatsapp} name="whatsapp" type="tel" />
            <FormSelect label={t.contact.form.position} name="position" options={positions} />
          </div>
          <div class="grid sm:grid-cols-2 gap-6">
            <FormSelect label={t.contact.form.projectType} name="projectType" options={projectTypes} />
            <FormSelect label={t.contact.form.budget} name="budget" options={budgetRanges} />
          </div>
          <div class="grid sm:grid-cols-2 gap-6">
            <FormSelect label={t.contact.form.consideration} name="consideration" options={considerations} />
            <FormSelect label={t.contact.form.timeline} name="timeline" options={timelines} />
          </div>
          <FormInput label={t.contact.form.remark} name="remark" type="textarea" rows={4} />

          <!-- Checkbox -->
          <label class="flex items-start gap-3 cursor-pointer">
            <input
              type="checkbox"
              class="mt-1 w-4 h-4 rounded border-gray-300 text-bmg-primary focus:ring-bmg-primary"
            />
            <span class="text-sm text-gray-600">
              {t.contact.form.consent}
            </span>
          </label>

          <Button type="submit" variant="process" class="w-full sm:w-auto">
            {t.contact.form.submit}
          </Button>
        </form>
      </div>

      <!-- Contact Information -->
      <div>
        <h2 class="text-3xl lg:text-4xl font-bold mb-4" style="color: #2C266C;">
          {t.contact.title}
        </h2>
        <p class="text-gray-600 mb-8">
          {t.contact.description}
        </p>

        <div class="space-y-6">
          <!-- Address -->
          <div class="flex gap-4">
            <div class="flex-shrink-0 w-6 h-6">
              <img src="/images/Landing/property-location.svg" alt="Location" class="w-full h-full" />
            </div>
            <div class="text-gray-600">
              {contactInfo.address.map((line) => (
                <p>{line}</p>
              ))}
            </div>
          </div>

          <!-- Phone -->
          <div class="flex gap-4">
            <div class="flex-shrink-0 w-6 h-6">
              <img src="/images/Landing/mobile-chat.svg" alt="Phone" class="w-full h-full" />
            </div>
            <div class="text-gray-600">
              {contactInfo.phone.map((phone) => (
                <p>{phone}</p>
              ))}
            </div>
          </div>

          <!-- Email -->
          <div class="flex gap-4">
            <div class="flex-shrink-0 w-6 h-6">
              <img src="/images/Landing/email.svg" alt="Email" class="w-full h-full" />
            </div>
            <a href={`mailto:${contactInfo.email}`} class="text-gray-600 hover:text-bmg-primary transition-colors">
              {contactInfo.email}
            </a>
          </div>

          <!-- Social Links -->
          <div class="pt-4 space-y-4">
            {contactInfo.socials.map((social) => (
              <a href={social.url} target="_blank" rel="noopener noreferrer" class="flex items-center gap-4 hover:opacity-70 transition-opacity group">
                <div class="w-8 h-8 flex items-center justify-center">
                  <img src={`/images/Landing/${social.icon}.svg`} alt={social.name} class="w-full h-full" />
                </div>
                <span class="text-gray-600 group-hover:text-bmg-primary transition-colors">{social.handle}</span>
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

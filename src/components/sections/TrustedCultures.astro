---
import StatItem from '../ui/StatItem.astro';
import InteractiveMapV2 from '../ui/InteractiveMapV2.astro';
import { useI18n } from '../../i18n/utils';

const { t } = useI18n(Astro.url);

const stats = [
  { value: '6', label: t.trustedCultures.stats.countriesDelivered },
  { value: '500+', label: t.trustedCultures.stats.projectsCompleted },
  { value: '30+', label: t.trustedCultures.stats.yearsExperience },
];
---

<section id="delivery" class="py-16 lg:py-24 bg-bmg-light">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <h2 class="text-3xl lg:text-4xl font-bold text-center mb-12 lg:mb-16 text-brand-primary">
      {t.trustedCultures.title}
    </h2>

    <!-- Interactive World Map -->
    <div class="relative max-w-6xl mx-auto mb-12 lg:mb-16">
      <InteractiveMapV2 />
    </div>

    <!-- Statistics -->
    <div class="grid grid-cols-3 gap-2 sm:gap-8 max-w-3xl mx-auto">
      {stats.map((stat) => (
        <StatItem value={stat.value} label={stat.label} />
      ))}
    </div>
  </div>
</section>

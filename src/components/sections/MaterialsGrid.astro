---
/**
 * MaterialsGrid Component
 *
 * Displays materials in a responsive 3-column grid layout.
 * Each card shows a material image with the name below.
 *
 * Props:
 * - materials: Array of material objects with id, image (string or Sanity image)
 * - categoryId: Category identifier for i18n lookup
 */
import { useI18n, getLocalizedPath } from '../../i18n/utils';
import { urlFor } from '../../lib/sanityImage';

interface Material {
  id: string;
  image: string | any; // Can be string path or Sanity image object
  name?: string; // Optional pre-resolved name from Sanity
  sanityImage?: any; // Original Sanity image reference
}

interface Props {
  materials: Material[];
  categoryId: string;
}

const { materials, categoryId } = Astro.props;
const { t, lang } = useI18n(Astro.url);

// Helper to get image URL - handles both Sanity images and static paths
function getImageUrl(material: Material): string {
  // If sanityImage exists and has asset reference, use Sanity CDN
  if (material.sanityImage?.asset) {
    return urlFor(material.sanityImage).width(600).height(450).format('webp').url();
  }
  // If image is a Sanity image object
  if (material.image?.asset) {
    return urlFor(material.image).width(600).height(450).format('webp').url();
  }
  // Fallback to static image path
  return typeof material.image === 'string' ? material.image : '/images/placeholder.jpg';
}
---

<div class="materials-grid-container" data-category={categoryId}>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {materials.map((material) => {
      // Use pre-resolved name from Sanity or fallback to i18n
      const materialName = material.name ||
        t.materials.items[material.id as keyof typeof t.materials.items]?.name ||
        material.id;
      const imageUrl = getImageUrl(material);

      return (
        <a
          href={getLocalizedPath(lang, `/materials/${material.id}`)}
          class="material-card-wrapper group"
          data-material-id={material.id}
        >
          <div class="material-card bg-white rounded-[10px] overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-300">
            <div class="aspect-[4/3] overflow-hidden">
              <img
                src={imageUrl}
                alt={materialName}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                loading="lazy"
              />
            </div>
          </div>
          <h3 class="material-name text-center mt-3 text-lg font-semibold text-[#101828]">
            {materialName}
          </h3>
        </a>
      );
    })}
  </div>
</div>

<style>
  .materials-grid-container {
    width: 100%;
  }

  .material-card-wrapper {
    display: block;
    text-decoration: none;
  }

  .material-card {
    box-shadow: 0px 4px 6px -1px rgba(0, 0, 0, 0.1), 0px 2px 4px -2px rgba(0, 0, 0, 0.1);
  }

  .material-card:hover {
    box-shadow: 0px 10px 15px -3px rgba(0, 0, 0, 0.1), 0px 4px 6px -4px rgba(0, 0, 0, 0.1);
  }

  .material-name {
    font-family: 'Inter', sans-serif;
    letter-spacing: -0.44px;
  }
</style>

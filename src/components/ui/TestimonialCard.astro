---
interface Props {
  name: string;
  role: string;
  quote: string;
  rating?: number;
}

const { name, role, quote, rating = 5 } = Astro.props;
---

<div class="testimonial-card bg-white p-6 lg:p-8 rounded-2xl">
  <!-- Star Rating -->
  <div class="flex gap-0.5 mb-4" style="width: 101.002px; height: 17.216px;">
    {Array.from({ length: 5 }).map((_, i) => (
      <img
        src="/images/Landing/star.png"
        alt="Star"
        class={`h-full ${i < rating ? '' : 'opacity-30'}`}
        style="height: 17.216px; width: auto;"
      />
    ))}
  </div>

  <!-- Quote -->
  <p class="testimonial-quote mb-6">
    {quote}
  </p>

  <!-- Author -->
  <div>
    <p class="testimonial-name">{name}</p>
    <p class="testimonial-role">{role}</p>
  </div>
</div>

<style>
  .testimonial-card {
    box-shadow:
      0 4px 8px rgba(0, 0, 0, 0.04),
      0 12px 40px rgba(0, 0, 0, 0.06);
  }

  .testimonial-quote {
    color: var(--color-text-secondary);
    font-family: 'Montserrat', sans-serif;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 30px;
  }

  .testimonial-name {
    color: var(--color-text-primary);
    font-family: 'Montserrat', sans-serif;
    font-size: 14px;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
  }

  .testimonial-role {
    color: var(--color-text-secondary);
    font-family: 'Montserrat', sans-serif;
    font-size: 10px;
    font-style: normal;
    font-weight: 400;
    line-height: 100%;
  }
</style>

---
interface Props {
  name: string;
  role: string;
  quote: string;
  rating?: number;
}

const { name, role, quote, rating = 5 } = Astro.props;
---

<div class="testimonial-card bg-white rounded-2xl p-6 lg:p-8">
  <!-- Star Rating -->
  <div class="flex gap-0.5 mb-4" style="width: 101.002px; height: 17.216px;">
    {Array.from({ length: 5 }).map((_, i) => (
      <img
        src="/images/Landing/star.png"
        alt="Star"
        class={`h-full ${i < rating ? '' : 'opacity-30'}`}
        style="height: 17.216px; width: auto;"
      />
    ))}
  </div>

  <!-- Quote -->
  <p class="testimonial-quote mb-6">
    {quote}
  </p>

  <!-- Author -->
  <div>
    <p class="testimonial-name">{name}</p>
    <p class="testimonial-role">{role}</p>
  </div>
</div>

<style>
  .testimonial-card {
    box-shadow: 0 38.519px 25.481px 0 rgba(56, 56, 56, 0.06),
                0 20px 13px 0 rgba(56, 56, 56, 0.05),
                0 8.148px 6.519px 0 rgba(56, 56, 56, 0.04),
                0 1.852px 3.148px 0 rgba(56, 56, 56, 0.02);
  }

  .testimonial-quote {
    color: #425466;
    font-family: 'Poppins', sans-serif;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 30px;
  }

  .testimonial-name {
    color: #313131;
    font-family: 'Poppins', sans-serif;
    font-size: 14px;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
  }

  .testimonial-role {
    color: #425466;
    font-family: 'Poppins', sans-serif;
    font-size: 10px;
    font-style: normal;
    font-weight: 400;
    line-height: 100%;
  }
</style>

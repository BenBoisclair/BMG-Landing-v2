---
interface Props {
  value: string;
  label: string;
}

const { value, label } = Astro.props;
---

<div class="text-center">
  <div class="text-2xl font-medium text-black leading-[150%] mb-2">{value}</div>
  <div class="text-base font-normal text-center leading-[150%] text-text-muted whitespace-nowrap">{label}</div>
</div>

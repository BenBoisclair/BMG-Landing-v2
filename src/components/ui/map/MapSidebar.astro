---
/**
 * MapSidebar - Expandable sidebar showing project list
 * - Purple gradient background
 * - Project cards with name, location, description, and thumbnail
 * - Click card to zoom/highlight on map
 */

interface Project {
  id: string;
  name: string;
  location: string;
  image: string;
  description?: string;
  lat: number;
  lng: number;
}

interface Props {
  projects: Project[];
}

const { projects } = Astro.props;
---

<!-- Toggle Button (always visible) -->
<button
  id="sidebar-toggle"
  class="sidebar-toggle"
  aria-label="Toggle project list"
  aria-expanded="false"
>
  <svg class="toggle-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
    <path d="M9 18l6-6-6-6" />
  </svg>
  <span class="toggle-label">Projects</span>
</button>

<!-- Sidebar Panel -->
<div id="map-sidebar" class="map-sidebar" aria-hidden="true">
  <div class="sidebar-header">
    <h3 class="sidebar-title">Projects</h3>
    <span class="sidebar-count">{projects.length}</span>
  </div>

  <div class="sidebar-content">
    {projects.map((project) => (
      <button
        class="sidebar-card"
        data-project-id={project.id}
        data-lat={project.lat}
        data-lng={project.lng}
      >
        <div class="card-info">
          <h4 class="card-name">{project.name}</h4>
          <p class="card-location">{project.location}</p>
          {project.description && (
            <p class="card-description">{project.description}</p>
          )}
        </div>
        <div class="card-image">
          <img src={project.image} alt={project.name} loading="lazy" />
        </div>
      </button>
    ))}
  </div>
</div>

<style>
  /* Toggle Button */
  .sidebar-toggle {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    z-index: 1000;
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 12px 14px;
    background: linear-gradient(135deg, #4A3F9F 0%, #2C266C 100%);
    color: white;
    border: none;
    border-radius: 12px 0 0 12px;
    cursor: pointer;
    transition: all 200ms ease-out;
    box-shadow: -2px 0 12px rgba(44, 38, 108, 0.3);
  }

  .sidebar-toggle:hover {
    padding-right: 18px;
    background: linear-gradient(135deg, #5A4FAF 0%, #3C367C 100%);
  }

  .sidebar-toggle[aria-expanded="true"] {
    right: 320px;
  }

  .sidebar-toggle[aria-expanded="true"] .toggle-icon {
    transform: rotate(180deg);
  }

  .toggle-icon {
    transition: transform 200ms ease-out;
    flex-shrink: 0;
  }

  .toggle-label {
    font-size: 13px;
    font-weight: 600;
    white-space: nowrap;
  }

  /* Sidebar Panel */
  .map-sidebar {
    position: absolute;
    right: 0;
    top: 0;
    bottom: 0;
    width: 320px;
    background: linear-gradient(180deg, #4A3F9F 0%, #2C266C 100%);
    border-radius: 0 16px 16px 0;
    z-index: 999;
    display: flex;
    flex-direction: column;
    transform: translateX(100%);
    transition: transform 300ms ease-out;
    box-shadow: -4px 0 20px rgba(44, 38, 108, 0.3);
  }

  .map-sidebar.open {
    transform: translateX(0);
  }

  /* Header */
  .sidebar-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.15);
  }

  .sidebar-title {
    color: white;
    font-size: 18px;
    font-weight: 700;
    margin: 0;
  }

  .sidebar-count {
    background: rgba(255, 255, 255, 0.2);
    color: white;
    font-size: 12px;
    font-weight: 600;
    padding: 4px 10px;
    border-radius: 20px;
  }

  /* Content */
  .sidebar-content {
    flex: 1;
    overflow-y: auto;
    padding: 16px;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  /* Hide scrollbar but keep functionality */
  .sidebar-content::-webkit-scrollbar {
    width: 6px;
  }

  .sidebar-content::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 3px;
  }

  .sidebar-content::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.3);
    border-radius: 3px;
  }

  .sidebar-content::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.4);
  }

  /* Project Card */
  .sidebar-card {
    display: flex;
    align-items: flex-start;
    gap: 14px;
    padding: 16px;
    background: rgba(255, 255, 255, 0.1);
    border: 2px solid transparent;
    border-radius: 14px;
    cursor: pointer;
    text-align: left;
    transition: all 200ms ease-out;
    width: 100%;
  }

  .sidebar-card:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateX(-4px);
  }

  .sidebar-card:focus {
    outline: none;
    border-color: rgba(255, 255, 255, 0.4);
  }

  .sidebar-card.selected {
    border-color: #CF2228;
    background: rgba(207, 34, 40, 0.15);
  }

  .card-info {
    flex: 1;
    min-width: 0;
  }

  .card-name {
    color: white;
    font-size: 16px;
    font-weight: 700;
    margin: 0 0 4px 0;
    line-height: 1.3;
  }

  .card-location {
    color: rgba(255, 255, 255, 0.85);
    font-size: 13px;
    font-weight: 500;
    margin: 0 0 6px 0;
  }

  .card-description {
    color: rgba(255, 255, 255, 0.65);
    font-size: 12px;
    font-weight: 400;
    margin: 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-image {
    flex-shrink: 0;
    width: 80px;
    height: 80px;
    border-radius: 10px;
    overflow: hidden;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Mobile styles */
  @media (max-width: 640px) {
    .map-sidebar {
      width: 100%;
      border-radius: 16px 16px 0 0;
      top: auto;
      bottom: 0;
      height: 70%;
      transform: translateY(100%);
    }

    .map-sidebar.open {
      transform: translateY(0);
    }

    .sidebar-toggle {
      right: 16px;
      top: auto;
      bottom: 16px;
      transform: none;
      border-radius: 12px;
      padding: 10px 16px;
    }

    .sidebar-toggle[aria-expanded="true"] {
      right: 16px;
      bottom: calc(70% + 16px);
    }

    .sidebar-toggle[aria-expanded="true"] .toggle-icon {
      transform: rotate(-90deg);
    }

    .toggle-icon {
      transform: rotate(90deg);
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .map-sidebar,
    .sidebar-toggle,
    .sidebar-card {
      transition-duration: 0ms;
    }
  }
</style>

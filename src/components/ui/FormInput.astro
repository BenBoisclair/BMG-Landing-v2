---
interface Props {
  label: string;
  name: string;
  type?: 'text' | 'email' | 'tel' | 'textarea';
  placeholder?: string;
  required?: boolean;
  rows?: number;
}

const {
  label,
  name,
  type = 'text',
  placeholder = '',
  required = false,
  rows = 4,
} = Astro.props;

const inputClasses = 'w-full h-[50px] px-3 flex flex-col justify-center items-start gap-3 rounded-md border border-[#D2D5DA] bg-white focus:ring-2 focus:ring-bmg-primary focus:border-transparent outline-none transition-all duration-200 text-gray-900 placeholder-gray-500';
const textareaClasses = 'w-full px-3 py-3 flex flex-col justify-start items-start gap-3 rounded-md border border-[#D2D5DA] bg-white focus:ring-2 focus:ring-bmg-primary focus:border-transparent outline-none transition-all duration-200 text-gray-900 placeholder-gray-500';
---

<div class="space-y-2">
  <label for={name} class="block text-sm font-medium text-gray-900">
    {label}
    {required && <span class="text-red-500">*</span>}
  </label>
  {type === 'textarea' ? (
    <textarea
      id={name}
      name={name}
      rows={rows}
      placeholder={placeholder || label}
      required={required}
      class={textareaClasses}
    />
  ) : (
    <input
      type={type}
      id={name}
      name={name}
      placeholder={placeholder || label}
      required={required}
      class={inputClasses}
    />
  )}
</div>
